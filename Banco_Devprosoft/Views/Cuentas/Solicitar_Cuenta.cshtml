
@{
    ViewData["Title"] = "Solicitar_Cuenta";
}

<div class="container" style="margin-top: 5rem !important;">

    <div class="col-6">
        <h1>Solicitar Cuenta</h1>
        <form id="Formulario_Solicitud_Cuenta">
            <div class="row">

                <div class="col-6">
                    <label>Nombres:</label>
                    <input class="form-control" name="Nombres" type="text" id="Nombres" placeholder="Ingrese su nombre." required>
                </div>
                <div class="col-6">
                    <label>Apellidos:</label>
                    <input class="form-control" name="Apellidos" type="text" id="Apellidos" placeholder="Ingrese su apellido.." required>
                </div>
                <div class="col-6">
                    <label>Cedula:</label>
                    <input class="form-control" name="Cedula" type="text" id="Cedula" placeholder="Digite su cedula." required>
                </div>
                <div class="col-6">
                    <label>Contacto1:</label>
                    <input class="form-control tel" name="Contacto1" type="text" id="Contacto#1" placeholder="Digite su contacto #1." required>
                </div>
                @*<div class="col-6">
            <label>Contacto2:</label>
            <input class="form-control tel" name="Contacto2" type="text" id="Contacto#2" placeholder="Digite su contacto #2." required>
        </div>*@

                <div class="col-6">
                    <label>Empleado:</label> <br />
                    <input class="Empleado_Radio" name="Empleado" type="radio" id="Empleado1" value="true" required> Si <br />
                    <input class="Empleado_Radio" name="Empleado" type="radio" id="Empleado2" value="false" required> No <br />

                </div>
                <div class="col-6">
                    <label>Correo:</label>
                    <input class="form-control" name="Correo" type="email" id="Correo" placeholder="Correo electronico." required>
                </div>
                <div class="col-12" id="Campos_Empleado" style="display: none;">
                    <div class="row">
                        <div class="col-6">
                            <label>Empresa:</label>
                            <input class="form-control" name="Empresa" type="text" id="Empresa" placeholder="Ingrese empresa donde labora." required>
                        </div>
                        <div class="col-6">
                            <label>Ocupación:</label>
                            <input class="form-control" name="Ocupacion" type="text" id="Ocupacion" placeholder="¿Qué cargo desempeña?." required>
                        </div>
                        <div class="col-6">
                            <label>Salario:</label>
                            <input class="form-control" name="Salario" type="text" id="Salario" placeholder="Digite su salario." required>
                        </div>
                    </div>
                </div>

                <div class="col-12 mt-3"><button class="btn btn-primary" id="Btn_Solicitar"><i class="fas fa-sign-in-alt"></i> Solicitar</button></div>
            </div>
        </form>
    </div>
</div>

@section Scripts{ 

    <script type="text/javascript">

        
        $(document).ready(function () { //Codigo a ejecutar cuando la página termine de cargar

            //Declaración de Mascaras
            $(".tel").mask('(000) 000-0000');
            $("#Cedula").mask('000-0000000-0');
            $("#Salario").mask('000,000,000', { reverse: true })
        });


        $(".Empleado_Radio").change(function () {

            var valor = $(this).val();

            if (valor == "true") {

                $("#Campos_Empleado").show();

            } else {

                $("#Campos_Empleado").hide();
            }



        })


        $("#Formulario_Solicitud_Cuenta").submit(function(){

            var data_cuentas_solicitadas = $("#Formulario_Solicitud_Cuenta").serialize();

            console.log(data_cuentas_solicitadas)

            $.post("/Cuentas/add_Solicitud_Cuentas", data_cuentas_solicitadas).done(function (resultado) {

                Swal.fire({
                    title: resultado.title,
                    text: resultado.text,
                    icon: resultado.icon
                });

            });

            return false;
        });


        //Ajax de Práctica

        function Ejecutar_Peticion() {

